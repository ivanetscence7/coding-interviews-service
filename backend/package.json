{
  "name": "nest-typescript-starter",
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "echo 'No e2e tests implemented yet.'",
    "pretty": "pretty-quick --staged",
    "pretty:project": "pretty-quick"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^1.4.2",
    "@nestjs/common": "^7.0.7",
    "@nestjs/config": "^0.2.3",
    "@nestjs/core": "^7.0.7",
    "@nestjs/jwt": "^7.0.0",
    "@nestjs/passport": "^7.0.0",
    "@nestjs/platform-express": "6.11.7",
    "@nestjs/platform-socket.io": "^7.0.7",
    "@nestjs/sequelize": "0.0.2",
    "@nestjs/swagger": "^4.3.1",
    "@nestjs/typeorm": "^6.3.3",
    "@nestjs/websockets": "^7.0.7",
    "@types/jest": "^25.1.3",
    "bcrypt": "^4.0.1",
    "handlebars": "^4.7.6",
    "mysql2": "2.1.0",
    "nodemailer": "^6.4.6",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.18.2",
    "postgres": "^1.0.2",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.5.4",
    "sequelize": "^5.21.4",
    "sequelize-typescript": "^1.1.0",
    "typeorm": "^0.2.22",
    "typescript": "3.7.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.8.7",
    "@nestjs/cli": "6.14.2",
    "@nestjs/schematics": "6.9.4",
    "@nestjs/testing": "^6.11.7",
    "@types/express": "4.17.2",
    "@types/node": "12.12.21",
    "@types/passport-local": "^1.0.33",
    "@types/sequelize": "4.28.8",
    "@types/supertest": "2.0.8",
    "@types/ws": "7.2.1",
    "@typescript-eslint/eslint-plugin": "2.20.0",
    "@typescript-eslint/parser": "2.20.0",
    "babel-cli": "^6.26.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-import": "2.20.1",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "supertest": "4.0.2",
    "ts-jest": "25.2.0",
    "ts-loader": "6.2.1",
    "ts-node": "8.6.2",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pretty"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
